{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Parallax Index",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Setup Check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/setup_check.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}"
        }
    ]
}
